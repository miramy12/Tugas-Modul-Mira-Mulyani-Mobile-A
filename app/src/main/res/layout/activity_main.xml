<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/home1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/teal_700" />

    <ImageView
        android:id="@+id/home2"
        android:layout_width="270dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/home1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="40dp"
        android:background="@color/white" />


    <TextView
        android:id="@+id/text1"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/home2"
        android:layout_alignTop="@+id/home2"
        android:layout_alignEnd="@+id/home2"
        android:layout_marginStart="49dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="12dp"
        android:text="CateringYuk"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="@color/teal_700"
        android:drawableBottom="@drawable/baseline_add_shopping_cart_24" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/teal_700"
        app:itemIconTint="@color/black"
        app:menu="@menu/button_nav_view" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navbar"
        android:layout_below="@+id/home1"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:id="@+id/content"/>


</RelativeLayout>